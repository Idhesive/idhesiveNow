{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "declaration": false,
        "resolveJsonModule": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "../../*"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "src/**/*",
        "../../lib/prisma.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}